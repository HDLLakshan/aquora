# Database
DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/aquora?schema=public"

# Server
PORT=4000
NODE_ENV=development
TRUST_PROXY=false

# CORS (comma-separated list; use '*' to allow any origin in development)
CORS_ORIGIN=http://localhost:3000

# Auth
AUTH_ACCESS_TOKEN_SECRET=replace-with-a-long-random-string-at-least-32-chars
AUTH_ACCESS_TOKEN_TTL=15m

AUTH_REFRESH_TOKEN_TTL_DAYS=30
AUTH_REFRESH_TOKEN_COOKIE_NAME=refresh_token
AUTH_REFRESH_TOKEN_COOKIE_SECURE=false
AUTH_REFRESH_TOKEN_COOKIE_SAME_SITE=strict
AUTH_REFRESH_TOKEN_COOKIE_DOMAIN=
AUTH_REFRESH_TOKEN_COOKIE_PATH=/auth

# Password hashing
BCRYPT_COST=12

# Prisma / tooling cache (optional)
# Fixes permission issues where Prisma tries to write to ~/.cache/prisma
XDG_CACHE_HOME=./.cache
